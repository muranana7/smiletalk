<!-- app/views/static_pages/login_new.html.erb -->
<header>
  <h1 class="site-title">〈 新規登録画面 〉</h1>
</header>

<div class="login-wrapper">
  <div class="card">

    <!-- フラッシュメッセージ -->
    <% if flash.any? %>
      <% flash.each do |key, message| %>
        <div class="alert <%= key %>"><%= message %></div>
      <% end %>
    <% end %>

    <!-- バリデーションエラー表示 -->
    <% if @user.errors.any? %>
      <ul class="error-messages">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>

    <!-- 登録フォーム -->
    <%= form_with model: @user, url: users_path, local: true do |f| %>

      <div class="form-group">
        <label>● ニックネーム</label>
        <%= f.text_field :nickname, class: "input-field" %>
      </div>

      <div class="form-group">
        <label>● パスワード</label>
        <%= f.password_field :password, class: "input-field" %>
      </div>

      <div class="form-group">
        <label>● メールアドレス</label>
        <%= f.email_field :email, class: "input-field" %>
      </div>

      <%= f.submit "登録", class: "btn-main" %>

    <% end %>
    <!-- form_with 終わり -->

  </div>

  <!-- 戻るボタン -->
  <div class="links">
    <%= link_to "戻る", root_path, class: "link-main" %>
  </div>
</div>

<footer>
  @大学
</footer>
